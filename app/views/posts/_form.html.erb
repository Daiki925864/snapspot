<%= form_with model: @post, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :content, "投稿の説明" %><br />
    <%= f.text_area :content, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class='input-birth-wrap'>
    <%= f.label :shooting_date, "撮影日" %><br />
    <%= raw sprintf(
      f.date_select(
          :shooting_date,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          start_year: 2000,
          end_year: (Time.now.year),
          date_separator: '%s'),
          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>


  <div class="field">
    <%= f.label :image, "投稿する画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>